{
  "name": "keycoder",
  "version": "1.1.0",
  "description": "A lightweight JavaScript library for interpreting event key and character codes across browsers.",
  "main": "dist/keycoder.js",
  "scripts": {
    "build": "gulp",
    "build:watch": "gulp watch",
    "test": "istanbul cover _mocha -- -R progress",
    "test:watch": "mocha --recursive -w -R min",
    "ci-test": "istanbul cover _mocha --report lcovonly -- -R progress && dot ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nbeach/keycoder.git"
  },
  "author": "Nicholas Beach <nicholas.c.beach@gmail.com> (http://nicholasbeach.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nbeach/keycoder/issues"
  },
  "keywords": [
    "keyCode",
    "charCode",
    "keypress",
    "keydown",
    "keyup",
    "key",
    "code",
    "ascii"
  ],
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "gulp": "^3.9.1",
    "gulp-add-src": "^0.2.0",
    "gulp-concat": "^2.6.0",
    "gulp-jsdoc-to-markdown": "^1.2.1",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.3",
    "gulp-wrap": "^0.11.0",
    "istanbul": "^0.4.3",
    "mocha": "^2.4.5"
  }
}
